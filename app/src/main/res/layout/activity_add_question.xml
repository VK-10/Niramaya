<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".AddQuestion">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/linear_text_question"
        android:orientation="vertical">



        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="20sp"
            android:text="Please Select the Question which you wish to answer so that we can know more about your problem"
            android:layout_marginTop="10dp"/>

        <com.google.android.material.textview.MaterialTextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Done with answering question? Click here to save the answer and book appointment"
            android:background="@drawable/round_backgound"
            android:textColor="@color/white"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:padding="10sp"
            android:id="@+id/text_about_question"/>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginTop="10sp"
            android:background="@color/white">

            <EditText
                android:layout_width="350dp"
                android:layout_height="50dp"
                android:hint="Find Symptom" />
            <ImageView
                android:layout_width="20dp"
                android:layout_height="50dp"
                android:src="@drawable/baseline_search_24"/>

        </LinearLayout>



        <androidx.recyclerview.widget.RecyclerView
            android:layout_marginTop="10dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/recycle_question_list_add"/>


    </LinearLayout>

</RelativeLayout>