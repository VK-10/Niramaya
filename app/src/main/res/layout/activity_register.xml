<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Register_activity"
    android:background="#ADD8E6">

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginTop="20dp"
        android:id="@+id/linear_icon">

        <ImageView
            android:layout_width="200dp"
            android:layout_height="200dp"
            android:src="@drawable/icon"
            android:layout_marginLeft="30dp"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="NIRAMAYA"
            android:layout_marginTop="100dp"
            android:textSize="30dp"
            android:textStyle="bold"
            style="@style/CustomFontStyle"
            android:textColor="#E73232"/>



    </LinearLayout>

    <EditText
        android:layout_below="@+id/linear_icon"
        android:layout_width="300dp"
        android:layout_height="40dp"
        android:hint="Name"
        android:layout_centerHorizontal="true"
        android:background="@color/white"
        android:textSize="20sp"
        android:textColor="@color/black"
        android:layout_marginTop="20dp"
        android:id="@+id/edt_professional_name"
        android:padding="5dp"/>

    <EditText
        android:layout_below="@+id/edt_professional_name"
        android:layout_width="300dp"
        android:layout_height="40dp"
        android:hint="Email"
        android:layout_centerHorizontal="true"
        android:background="@color/white"
        android:textSize="20sp"
        android:textColor="@color/black"
        android:layout_marginTop="20dp"
        android:id="@+id/edt_email"
        android:padding="5dp"/>

    <EditText
        android:layout_below="@+id/edt_email"
        android:layout_width="300dp"
        android:layout_height="40dp"
        android:hint="Password"
        android:layout_centerHorizontal="true"
        android:background="@color/white"
        android:textSize="20sp"
        android:textColor="@color/black"
        android:layout_marginTop="20dp"
        android:id="@+id/edt_password"
        android:inputType="textPassword"
        android:padding="5dp"/>

    <EditText
        android:layout_below="@+id/edt_password"
        android:layout_width="300dp"
        android:layout_height="40dp"
        android:hint="Mobile Number"
        android:layout_centerHorizontal="true"
        android:background="@color/white"
        android:textSize="20sp"
        android:textColor="@color/black"
        android:layout_marginTop="20dp"
        android:id="@+id/edt_mobile"
        android:inputType="number"
        android:padding="5dp" />

    <EditText
        android:layout_below="@+id/edt_mobile"
        android:layout_width="300dp"
        android:layout_height="40dp"
        android:hint="Registration Number"
        android:layout_centerHorizontal="true"
        android:background="@color/white"
        android:textSize="20sp"
        android:textColor="@color/black"
        android:layout_marginTop="20dp"
        android:id="@+id/edt_registry_number"
        android:inputType="text"
        android:padding="5dp"/>

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/btn_submit"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Submit"
        android:layout_below="@+id/edt_registry_number"
        android:layout_marginTop="20dp"
        android:layout_centerHorizontal="true"
        android:textSize="20sp"
        android:background="#9C27B0"
        android:textColor="@color/white"/>





</RelativeLayout>