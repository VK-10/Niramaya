<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/user_symptoms"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".User_Symptoms">

    <!-- TODO: Update blank fragment layout -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/linear_text_question"
        android:orientation="vertical">

        <com.google.android.material.textview.MaterialTextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="20sp"
            android:text="Please Select the Question which you wish to answer so that we can know more about your problem"
            android:layout_marginTop="10dp"
            android:padding="10dp"
            android:textColor="#EF5350"
            android:background="@drawable/round_back"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginTop="10sp"
            android:background="@color/white">

            <com.google.android.material.textfield.TextInputEditText
                android:layout_width="350dp"
                android:layout_height="50dp"
                android:hint="Find Symptom"
                android:padding="10dp"/>
            <ImageView
                android:layout_width="20dp"
                android:layout_height="50dp"
                android:src="@drawable/baseline_search_24"/>

        </LinearLayout>



        <androidx.recyclerview.widget.RecyclerView
            android:layout_marginTop="10dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/recycle_question_list"/>


    </LinearLayout>




</FrameLayout>